@page "/Bikes";

<label for="limit">Limit:</label>
<input type="number" id="limit" name="limit" min="0" max="10" @bind-value="limit" @bind-value:event="oninput" /><br/>
<button class="btn btn-primary" @onclick="AddBikes">Add Bikes</button>

<ul>
    @foreach (var bike in bikeNames.Take(limit))
    {
        <li>@bike</li>
    }
</ul>

